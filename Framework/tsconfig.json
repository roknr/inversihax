{
    "compilerOptions": {
        "target": "es2018",
        "removeComments": false,
        "rootDir": "./src",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "reflect-metadata"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}